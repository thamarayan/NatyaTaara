<div class="container-fluid cf-students">
    <div class="row">
        <div class="col-md-12 col-12">
            <h1 style="display: inline-block;">Students List</h1> &nbsp; &nbsp; &nbsp;
            <a href="/backstage/dashboard" style="text-decoration: none; color:yellow">Back to Dashboard</a>
            <% if (students.length > 0) { %>
             
                <table class="table table-responsive table-striped table-dark " style="color:white; text-align: left;">
                    <thead>
                      <tr>
                        <th scope="col">StudentName</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Address</th>
                        <th scope="col">Update?</th>
                      </tr>
                    </thead>
                    <tbody>
                       
                    <% students.forEach(student => { %>
                      <tr> 
                        <td><%= student.studentName %></td>
                        <td><%= student.contact %></td> 
                        <td><%= student.address %></td>
                        <td>
                          <!-- Button trigger modal -->
                        <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal-<%=student._id%>">
                          Update
                        </button>
    
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal-<%=student._id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel" style="color: black;">Student List</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body" style="background-color: black;">
                                <form action="/backstage/updateStudent/<%=student._id%>" method="post" style="background-color: black;">
                                  <div class="mb-3">
                                    <label for="contact" class="form-label">Contact</label>
                                    <input type="text" class="form-control" id="contact" name="contact" value="<%= student.contact %>">
                                    <label for="address" class="form-label">Address</label>
                                    <input type="text" class="form-control" id="address" name="address" value="<%= student.address %>">
                                </div>
                                  <div class="mb-3">
                                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                  </div>
                                </form>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              </div>
                            </div>
                          </div>
                        </div>
                        </td>     
                      </tr>
                      <% }) %>                  
                    </tbody>
                </table>

            <% } else { %>
             <p style="color:yellow; padding:5%">Students yet to be added</p>
            <% } %>
        </div>
    </div>
</div>